<p style="color: green"><%= notice %></p>

<% content_for :title, "Events" %>

<section>
  <div class="section-content">
    <h1>Events</h1>
  </div>
</section>

<div class="content">

  <div id="events">
    <% @events.each do |event| %>
      <section>
        <div class="section-content">
          <%= render event %>
          <p>
            <%= link_to "Show this event", event %>
          </p>
        </div>
      </section>
    <% end %>
  </div>

</div>

<section>
    <%= link_to "New event", new_event_path %>
</section>
